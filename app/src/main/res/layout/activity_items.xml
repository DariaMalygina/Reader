<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.reader.gui.ActivityItems">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:id="@+id/progressBarItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CircularProgress"/>

        <ListView
            android:id="@+id/listViewItems"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/ListView" />

        <ViewStub
            android:id="@+id/emptyListViewItems"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout="@layout/empty_list_view_feed"/>

        <ViewStub
            android:id="@+id/errorListViewItems"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout="@layout/error_list_view_feed" />



    </FrameLayout>

</android.support.constraint.ConstraintLayout>
